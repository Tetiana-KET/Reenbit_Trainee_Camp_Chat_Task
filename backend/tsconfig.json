{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"typeRoots": ["node_modules/@types", "src/types"],
		"outDir": "./dist",
		"rootDir": "../",
		"types": ["express"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true
	},
	"include": ["src/**/*", "../shared/**/*", "src/types/express.d.ts"]
}
